{
  "compilerOptions": {
    "module": "commonJS",
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": ["src/config"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "express.d.ts"
  ],
  "include": [
    "src"
  ]
}
